<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">


		<EditText
			android:id="@+id/et_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="10"
			android:hint="@string/et_address"
			android:inputType="textPersonName"
			android:layout_centerHorizontal="true"
			android:importantForAutofill="no" />

			<Button
				android:id="@+id/btn_check"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/btn_check"
				android:layout_below="@+id/et_address"
				android:layout_toLeftOf="@+id/btn_clear"
				android:layout_toStartOf="@+id/btn_clear" />


			<Button
				android:id="@+id/btn_clear"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/btn_clear"
				android:layout_below="@+id/et_address"
				android:layout_toRightOf="@+id/et_address"
				android:layout_toEndOf="@+id/et_address" />

	<ImageView
		android:id="@+id/mypicture"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:contentDescription="@string/mypicture" />

</RelativeLayout>